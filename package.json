{
  "name": "indus-autonomous-platform",
  "version": "2.0.0",
  "description": "Self-governing production-grade autonomous platform",
  "main": "dist/server.js",
  "scripts": {
    "build":        "tsc",
    "start":        "node dist/server.js",
    "dev":          "ts-node-dev --respawn --transpile-only src/server.ts",
    "migrate":      "prisma migrate deploy",
    "migrate:auto": "prisma migrate deploy && psql $DATABASE_URL -f prisma/migration_autonomous.sql",
    "lint":         "eslint src --ext .ts",
    "test":         "jest",
    "verify":       "psql $DATABASE_URL -f src/sql/verify-autonomous.sql",
    "backup":       "ts-node src/autonomous/backup-validator.ts",
    "report":       "ts-node -e \"require('./src/autonomous/executive-summary').generateExecutiveSummary(require('./src/config/database').prisma)\""
  },
  "dependencies": {
    "@prisma/client":   "^5.0.0",
    "fastify":          "^4.0.0",
    "redis":            "^4.0.0",
    "pino":             "^8.0.0",
    "pino-pretty":      "^10.0.0"
  },
  "devDependencies": {
    "@types/node":       "^20.0.0",
    "prisma":            "^5.0.0",
    "ts-node":           "^10.0.0",
    "ts-node-dev":       "^2.0.0",
    "typescript":        "^5.0.0",
    "jest":              "^29.0.0",
    "ts-jest":           "^29.0.0",
    "@types/jest":       "^29.0.0"
  }
}
